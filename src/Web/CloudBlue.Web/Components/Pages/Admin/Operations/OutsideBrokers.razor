@page "/outside-brokers"

<PageTitle>OutsideBrokers</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="OutsideBrokers" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@outsideBrokers" TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="OutsideBrokerPk" Title="Outside Broker Pk">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="OutsideBrokerName" Title="Outside Broker Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="CommissionPercentage" Title="Commission Percentage">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="IsPerSalesValue" Title="Is Per Sales Value">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="UserName" Title="User Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="PasswordSalt" Title="Password Salt">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="PasswordHash" Title="Password Hash">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Property="IsActive" Title="Is Active">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="NewCloudBlueMirror.Models.CloudBlue.OutsideBroker" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="outsideBroker">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, outsideBroker)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
