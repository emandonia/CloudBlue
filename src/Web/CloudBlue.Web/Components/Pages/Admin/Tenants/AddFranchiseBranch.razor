@page "/add-franchise-branch"

<PageTitle>Add FranchiseBranch</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save FranchiseBranch</RadzenAlert>
        <RadzenTemplateForm TItem="NewCloudBlueMirror.Models.CloudBlue.FranchiseBranch" Data="@franchiseBranch" Visible="@(franchiseBranch != null && canEdit)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Company Id" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@franchiseBranch.CompanyId" Name="CompanyId" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="CompanyId" Text="CompanyId is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Branch Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@franchiseBranch.BranchName" Name="BranchName" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="BranchName" Text="BranchName is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Fill Color" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@franchiseBranch.FillColor" Name="FillColor" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Text Color" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@franchiseBranch.TextColor" Name="TextColor" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Disabled" Component="Disabled" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@franchiseBranch.Disabled" Name="Disabled" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Property Auto Approval" Component="PropertyAutoApproval" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@franchiseBranch.PropertyAutoApproval" Name="PropertyAutoApproval" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Request Auto Approval" Component="RequestAutoApproval" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@franchiseBranch.RequestAutoApproval" Name="RequestAutoApproval" />
                </RadzenColumn>
            </RadzenRow>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

