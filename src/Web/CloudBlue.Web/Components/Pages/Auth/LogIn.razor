@page "/login"
@using CloudBlue.Web.Components.Layout
@layout BasicLayout
<style>

    .rz-message {
        margin-top: 0px;
        margin-bottom: 0px;
        z-index: 999;
    }
</style>
<RadzenCard class="rz-my-12 rz-mx-auto rz-p-4 rz-p-md-12" style="max-width: 600px;">
    <RadzenTemplateForm Data="@_loginModel">
        <RadzenLogin AllowResetPassword="true"
                     Username="@_loginModel.Username"
                     Password="@_loginModel.Password"
                     AllowRegister="false"
                     Login="@(args => LoginInAsync(args))"
                     ResetPassword="@(args => ResetPasswordAsync(args))"/>
    </RadzenTemplateForm>

</RadzenCard>